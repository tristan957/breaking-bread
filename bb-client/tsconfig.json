{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6",
      "es7",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
  },
  "include": [
    "src/**/*"
  ]
}
